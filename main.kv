#:kivy 1.9.0

<MainActivity>:
	orientation: "vertical"

	GridLayout:
        size_hint: 1, .06
        cols: 3
		spacing: "8dp"
		padding: [1, 1, 1, 1]
	
		Label:
			size_hint: .1, 1
			text: str(root.score)

		ProgressBar:
            size_hint: .7, 1
			value: root.progress

	Label:
		text: root.current_question
		color: root.label_color
		font_size: '30sp'
		#size: self.texture_size


    GridLayout:
        size_hint: 1, .1
        cols: 2

        TextInput:
            id: textinput
            hint_text: "Enter your answer here"
            on_text: root.on_text(self)
            size_hint: .9, 1
            focus: True
            #on_text_validate: root.on_input_text_validate(self)
            #pos_hint: {'center_x': 0.5, 'center_y': 0.8}
            multiline: True  # No defocus

        Button:
            text: "Enter"
            size_hint: 0.1, 1
